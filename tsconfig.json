{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmitOnError": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "removeComments": false,
    "target": "es5",
    "outDir": "./dist/es",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "test",
    "docs",
    "extras",
    "examples"
  ]
}